<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <ImageView
        android:id="@+id/imageViewREGISTRAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/libro1" />

    <EditText
        android:id="@+id/input_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Nombre usuario"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="#C4EEF2"
        app:layout_constraintEnd_toEndOf="@+id/input_email"
        app:layout_constraintStart_toStartOf="@+id/input_email"
        app:layout_constraintTop_toBottomOf="@+id/input_user_id" />

    <EditText
        android:id="@+id/input_user_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="apellido usuario"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="#C4EEF2"
        app:layout_constraintStart_toStartOf="@+id/input_user_name"
        app:layout_constraintTop_toBottomOf="@+id/input_user_name" />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="29dp"
        android:ems="10"
        android:hint="correo usuario"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColorHint="#C4EEF2"
        app:layout_constraintBottom_toTopOf="@+id/input_user_password"
        app:layout_constraintEnd_toEndOf="@+id/input_user_password" />

    <EditText
        android:id="@+id/input_user_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:hint="contraseÃ±a"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="#C4EEF2"
        app:layout_constraintBottom_toTopOf="@+id/input_phone"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/input_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="telefono usuario"
        android:inputType="phone"
        android:textAlignment="center"
        android:textColorHint="#C4EEF2"
        app:layout_constraintBottom_toTopOf="@+id/btn_registrar"
        app:layout_constraintStart_toStartOf="@+id/input_user_password" />

    <EditText
        android:id="@+id/input_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:hint="id usuario"
        android:inputType="number"
        android:textAlignment="center"
        android:textColorHint="#C4EEF2"
        app:layout_constraintEnd_toEndOf="@+id/input_user_name"
        app:layout_constraintTop_toBottomOf="@+id/text_registro" />

    <Button
        android:id="@+id/btn_volver_regis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="7dp"
        android:backgroundTint="#9FB3BF"
        android:text="volver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_registro"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#9FB3BF"
        android:text="registro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_registro"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="registrar"
        android:textAlignment="center"
        android:textColor="#D9C6BA"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_volver_regis" />


</androidx.constraintlayout.widget.ConstraintLayout>